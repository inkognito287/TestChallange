<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

   <data>
         <variable
             name="information2"
             type="com.example.visual.model.Information2" />

   </data>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/dad"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#F1F1F1">


      <LinearLayout
          android:id="@+id/linearLayout4"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:orientation="horizontal"
          app:layout_constraintBottom_toTopOf="@+id/guideline32"
          app:layout_constraintEnd_toStartOf="@+id/guideline24"
          app:layout_constraintStart_toStartOf="@+id/guideline23"
          app:layout_constraintTop_toTopOf="parent">

         <ImageButton
             android:id="@+id/imageButton14"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="0.15"
             android:background="@null"
             android:onClick="back"
             android:src="@drawable/ic_baseline_arrow_back_24" />

         <TextView
             android:id="@+id/textView6"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:fontFamily="sans-serif-medium"
             android:gravity="center_vertical"
             android:text="Новое Событие"
             android:textColor="#000000" />
      </LinearLayout>

      <ScrollView
          android:id="@+id/scrollView2"
          android:layout_width="0dp"
          android:layout_height="0dp"
          app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
          app:layout_constraintEnd_toStartOf="@+id/guideline24"
          app:layout_constraintStart_toStartOf="@+id/guideline23"
          app:layout_constraintTop_toTopOf="@+id/guideline32">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="vertical">

               <LinearLayout
                   android:id="@+id/linearLayout2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                  <include
                      android:id="@+id/now"
                      layout="@layout/order_item"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_margin="2dp"
                      android:layout_weight="1"
                      app:image="@{information2.image[7]}"
                      app:text="@{information2.text[7]}"
                      app:title="@{information2.title[7]}"
                      app:visibility="@{information2.visibility[7]}">

                  </include>

                  <include
                      android:id="@+id/createCalendar"
                      layout="@layout/order_item"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_margin="2dp"
                      android:layout_weight="1"
                      app:image="@{information2.image[0]}"
                      app:text="@{information2.text[0]}"
                      app:title="@{information2.title[0]}"
                      app:visibility="@{information2.visibility[0]}" />

               </LinearLayout>

               <include
                   android:id="@+id/createList"
                   layout="@layout/order_item"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="2dp"
                   app:image="@{information2.image[1]}"
                   app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                   app:text="@{information2.text[1]}"
                   app:title="@{information2.title[1]}"
                   app:visibility="@{information2.visibility[1]}" />


               <include
                   android:id="@+id/createList2"
                   layout="@layout/order_item"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="2dp"
                   app:image="@{information2.image[2]}"
                   app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                   app:text="@{information2.text[2]}"
                   app:title="@{information2.title[2]}"
                   app:visibility="@{information2.visibility[2]}">

               </include>

               <include
                   android:id="@+id/createList3"
                   layout="@layout/order_item"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="2dp"
                   app:image="@{information2.image[3]}"
                   app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                   app:text="@{information2.text[3]}"
                   app:title="@{information2.title[3]}"
                   app:visibility="@{information2.visibility[3]}">

               </include>

               <include
                   android:id="@+id/createList4"
                   layout="@layout/order_item"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="2dp"
                   app:image="@{information2.image[4]}"
                   app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                   app:text="@{information2.text[4]}"
                   app:title="@{information2.title[4]}"
                   app:visibility="@{information2.visibility[4]}">

               </include>

               <include
                   android:id="@+id/createList5"
                   layout="@layout/order_item"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="2dp"
                   app:image="@{information2.image[5]}"
                   app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                   app:text="@{information2.text[5]}"
                   app:title="@{information2.title[5]}"
                   app:visibility="@{information2.visibility[5]}" />

               <include
                   android:id="@+id/createList6"
                   layout="@layout/order_item"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="2dp"
                   app:image="@{information2.image[6]}"
                   app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                   app:text="@{information2.text[6]}"
                   app:title="@{information2.title[6]}"
                   app:visibility="@{information2.visibility[6]}">

               </include>

               <include
                   layout="@layout/order_edit_text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="2dp">

               </include>

               <com.google.android.material.button.MaterialButton
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:layout_margin="5dp"
                   android:background="@drawable/button2"
                   android:drawableLeft="@drawable/add_photo"
                   android:fontFamily="sans-serif"
                   android:onClick="addPhoto"
                   android:paddingLeft="90dip"
                   android:paddingRight="90dp"
                   android:text="Добавить фото"
                   android:textAllCaps="false"
                   android:textColor="#000000"
                   app:backgroundTint="@null"

                   app:iconGravity="textStart" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                  <LinearLayout
                      android:id="@+id/imagesGallery"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="5dp"
                      android:dividerPadding="5dp"
                      android:orientation="horizontal">

                     <ImageView
                         android:id="@+id/imageView9"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginRight="10dp"
                         android:layout_weight="1"

                         android:background="@drawable/button2"
                         tools:src="@tools:sample/avatars" />

                     <ImageView
                         android:id="@+id/imageView3"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         tools:src="@tools:sample/avatars" />
                  </LinearLayout>

               </LinearLayout>
            </HorizontalScrollView>

         </LinearLayout>
      </ScrollView>

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/constraintLayout2"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="@drawable/order_activity_background_for_two_button"
          android:orientation="horizontal"
          app:layout_constraintBottom_toTopOf="@+id/guideline25"
          app:layout_constraintEnd_toStartOf="@+id/guideline24"
          app:layout_constraintStart_toStartOf="@+id/guideline23"
          app:layout_constraintTop_toTopOf="@+id/guideline26">

         <Button
             android:id="@+id/button2"
             android:layout_width="0dp"

             android:layout_height="0dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:background="@drawable/button2"
             app:backgroundTint="#EC3902"
             android:drawableLeft="@drawable/drawable_left_save"
             android:singleLine="true"
             android:text="Сохранить"
             android:textSize="12sp"
             app:autoSizeTextType="none"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toStartOf="@+id/guidelinenew"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent" />

         <androidx.constraintlayout.widget.Guideline
             android:id="@+id/guidelinenew"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical"
             app:layout_constraintGuide_percent="0.5">

         </androidx.constraintlayout.widget.Guideline>

         <Button
             android:id="@+id/button4"
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_margin="1dp"
             android:layout_weight="1"

             android:background="@drawable/button2"
             android:drawableLeft="@drawable/drawable_left_sogl"
             android:singleLine="true"
             android:text="Согласовать"
             android:textSize="12sp"
             app:backgroundTint="#00C853"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="@+id/guidelinenew"
             app:layout_constraintTop_toTopOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <LinearLayout
          android:id="@+id/linearLayout3"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:orientation="horizontal"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toTopOf="@+id/guideline25">

         <ImageButton
             android:id="@+id/imageButton6"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:background="@drawable/left_circle"
             android:backgroundTint="#F1F1F1"
             android:backgroundTintMode="screen"
             android:src="@drawable/bottom_panel_1" />

         <ImageButton
             android:id="@+id/imageButton7"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:background="#FFFFFF"
             android:src="@drawable/bottom_panel_2" />

         <ImageButton
             android:id="@+id/imageButton8"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:background="#FFFFFF"
             android:src="@drawable/bottom_panel_3" />

         <ImageButton
             android:id="@+id/imageButton9"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:background="#FFFFFF"
             android:src="@drawable/bottom_panel_4" />

         <ImageButton
             android:id="@+id/imageButton12"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:background="@drawable/right_circle"
             android:backgroundTint="#F1F1F1"
             android:backgroundTintMode="screen"
             android:src="@drawable/bottom_panel_5" />
      </LinearLayout>

      <androidx.constraintlayout.widget.Guideline
          android:id="@+id/guideline23"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.03" />

      <androidx.constraintlayout.widget.Guideline
          android:id="@+id/guideline24"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.97" />

      <androidx.constraintlayout.widget.Guideline
          android:id="@+id/guideline25"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          app:layout_constraintGuide_percent="0.9" />

      <androidx.constraintlayout.widget.Guideline
          android:id="@+id/guideline26"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          app:layout_constraintGuide_percent="0.82" />

      <androidx.constraintlayout.widget.Guideline
          android:id="@+id/guideline32"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          app:layout_constraintGuide_percent="0.1" />

      <View
          android:id="@+id/view8"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#FFFFFF"
          app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

   </androidx.constraintlayout.widget.ConstraintLayout>
</layout>